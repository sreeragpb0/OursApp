<form style="color:white;" class="text-center mt-5" action="/login" method="post">
  <!-- Email input -->
  <div class="primary">
    {{#if loginErr}}
  <label for="error code" style="color:red">{{loginErr}}</label>
    {{/if}}

  </div>

  <div class="form-outline">
    <label class="form-label mt-2" for="email">Email address</label><br>
    <input type="email" name="email" style="width: 22rem" />

  </div>

  <!-- Password input -->
  <div class="form-outline ">
    <label class="text-left" for="password">Password</label><br>
    <input type="password" name="password" style="width: 22rem" />

  </div>


  <div class="row">
    <div class="col-md-6 m-auto">

      <div class="text-center"><br><br>
        <input type="checkbox"  name="checkbox" checked />
        <label class="form-label" for="checkbox"> Remember me </label>
      </div>
      <div>
        <input type="submit" class="btn btn-primary" value="Login">
      </div>



      <div class="mt-3">
        <a href="#!">Forgot password?</a>
      </div>
    </div>
  </div>

  <div class="text-center ">
    <p>Not a member? <a href="/signup">Register</a></p>

  </div>
</form>