<section>
    <div class="container mt-4 ">
        <div class="row">

            {{#each product}}
            <div class="col-md-3  mb-4 ">
                <section>

                    <div class="card text-center text-white" style="width:auto; height:auto; background-color: transparent;">
                        <img class="card-img-top img-fluid" style="height: 10rem;"
                            src="/product_images/{{this._id}}.jpg" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">{{this.productName}}</h4>
                            <p>Rs.{{this.Price}}/-</p>
                            <p style="height:3rem" class="card-text">{{this.Description}}.</p>
                            {{!-- <a href="add-to-cart/{{this._id}}" class="btn btn-primary " style="color:white;backgroud:">Add to cart</a> --}}
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                        </div>
                    </div>

                </section>
            </div>
            {{/each}}

        </div>
    </div>

</section>