<section>
        <div class="container">
            <div class="row mt-4">
                <a href="admin/add-products" class="btn btn-success ml-auto">Add products</a>
            </div>
            <div class="row mt-3">
                
                <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Product</th>
      <th scope="col">catogory</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.productName}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
       <td>{{this.Price}}</td>
      <td><img style="width:50px; height:50px;" src="/product_images/{{this._id}}.jpg" alt=""></td>
    </tr>
   
    {{/each}}
   
  </tbody>
</table>
            </div>
        </div>
    </section>